{
  "extends": "@tsconfig/strictest",
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],

    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,

    "sourceMap": true,
    "outDir": "./dist",
    "noEmitOnError": true
  },
  "include": ["src/**/*.ts"]
}
